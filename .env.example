# Database Configuration
MYSQL_HOST=your_mysql_host
MYSQL_PORT=3306
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=your_mysql_database
DATABASE_URL=mysql://user:password@host:port/database

# Database Pool Configuration (opcional)
# Limite de conexões simultâneas no pool
DB_CONNECTION_LIMIT=10

# Session Configuration (opcional)
# Chave secreta para assinar cookies de sessão (MUDE EM PRODUÇÃO!)
SESSION_SECRET=zatplant-secret-key-change-in-production
# Duração da sessão em milissegundos (padrão: 7 dias = 604800000)
SESSION_MAX_AGE=604800000

# Asaas Payment Gateway Configuration
# Para ambiente de produção, use: https://api.asaas.com/v3
# Para ambiente de sandbox (testes), use: https://sandbox.asaas.com/api/v3
ASAAS_API_URL=https://sandbox.asaas.com/api/v3
ASAAS_API_TOKEN=your_asaas_api_token_here

# Evolution API Configuration
EVOLUTION_API_URL=your_evolution_api_url
EVOLUTION_API_TOKEN=your_evolution_api_token

# Webhook Configuration (URL global do sistema para receber mensagens do WhatsApp)
WEBHOOK_URL=https://your-domain.com/api/webhook/whatsapp
WEBHOOK_TOKEN=Bearer your_webhook_token_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
